<Window x:Class="Regex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Regex"
        mc:Ignorable="d"
        Title="Input validator" Height="250" Width="500">
    <StackPanel>
        <DockPanel Margin="0 15">
            <Label Content="Name" />
            <TextBox Width="300" Padding="5">
            </TextBox>
        </DockPanel>
        <DockPanel Margin="0 15">
            <Label Content="Phone" />
            <TextBox Width="300" Padding="5">
            </TextBox>
        </DockPanel>
        <DockPanel Margin="0 15">
            <Label Content="E-mail" />
            <TextBox Width="300" Padding="5">
            </TextBox>
        </DockPanel>
            <Button Content="Save" Width="80" Margin="0 5 60 20" HorizontalAlignment="Right" />



    </StackPanel>
</Window>
