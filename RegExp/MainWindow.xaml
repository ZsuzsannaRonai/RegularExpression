<Window x:Class="RegExp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegExp"
        mc:Ignorable="d"
        Title="Input validation" Height="220" Width="400">
    <StackPanel>
        <DockPanel Margin="10 10">
            <Label Content="Name" />
            <TextBox x:Name="txtName" Width="250" Padding="5 5" />
        </DockPanel>
        <DockPanel Margin="10 10">
            <Label Content="Phone" />
            <TextBox x:Name="txtPhone" Width="250" Padding="5 5" />
        </DockPanel>
        <DockPanel Margin="10 10">
            <Label Content="E-mail" />
            <TextBox x:Name="txtEmail" Width="250" Padding="5 5" />
        </DockPanel>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Right" Width="40" Margin="0 10 30 20" Click="BtnSave_Click"/>
    </StackPanel>
</Window>
